sudo apt-get update
sudo apt-get install apache2 libapache2-mod-wsgi
sudo apt-get install python-setuptools
sudo apt-get install python-pip
sudo easy_install django
sudo apt-get install mysql-server python-mysqldb

sudo easy_install djangorestframework
sudo easy_install django-filter 

sudo cp /home/ubuntu/chai/chai_cloud/chai.conf /etc/apache2/sites-enabled/chai.conf

sudo chmod -R a+x /home/ubuntu/chai/chai_cloud
sudo chmod -R a+w static/
sudo chmod -R a+w media/
sudo chmod -R a+w /var/www/

sudo service apache2 restart
